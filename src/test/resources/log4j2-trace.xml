<?xml version="1.0" encoding="UTF-8"?>

<!--
To use, pass in:
  -Dlog4j.configurationFile=log4j2-trace.xml
-->
<Configuration verbose="false" status="warn" packages="org.infinispan.quarkus.log4j">

   <Appenders>
      <File name="FileAppender" fileName="${sys:java.io.tmpdir}/quarkus-local-cache/quarkus.log" append="false">
         <ThresholdFilter level="trace"/>
         <PatternLayout pattern="%d %-5p [%c] (%t:%x) %m%n"/>
      </File>
   </Appenders>

   <Loggers>
       <Logger name="org.hibernate" level="trace" />
       <Logger name="org.infinispan.quarkus" level="trace" />
       <Root level="trace">
          <AppenderRef ref="FileAppender"/>
       </Root>
   </Loggers>

</Configuration>
